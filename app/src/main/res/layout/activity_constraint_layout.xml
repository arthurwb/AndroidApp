<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="OK"
        app:layout_constraintEnd_toStartOf="@id/cancel_button"
        app:layout_constraintTop_toTopOf="@id/cancel_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL\nCANCEL"
        android:id="@+id/cancel_button"
        app:layout_constraintTop_toBottomOf="@id/text_box"
        app:layout_constraintEnd_toEndOf="@id/text_box"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer volutpat eleifend magna ut aliquet. Proin aliquet ipsum commodo ligula pharetra porttitor. Donec semper elit orci. Sed dignissim dui sit amet tempor gravida. Sed feugiat vulputate diam, at commodo dolor suscipit non. Curabitur eleifend tempus bibendum. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Phasellus elementum eros quis nisl lobortis ornare. Suspendisse ultricies libero nec dictum facilisis. Aliquam viverra felis ut ex finibus blandit. "
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>